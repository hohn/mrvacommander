    "version": "0.2.0",
    "configurations": [
        
           {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--db_collection_dir",
                "db-collection-py",
                "--starting_path",
                "$HOME/work-gh/mrva/mrva-open-source-download"
            ],
            "justMyCode": true,
            "stopOnEntry": false
        }
    ]
}
