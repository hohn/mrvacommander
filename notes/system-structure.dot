digraph DockerCompose {
    rankdir=LR; // Left-to-right layout
    node [shape=box style="rounded,filled" color=lightblue2 fontname="Helvetica"];
    edge [arrowsize=0.5];
    
    // Title
    label="Container Dependencies";
    labelloc=top;
    fontsize=20;
    fontname="Helvetica";

    // Increase spacing between nodes
    nodesep=1.0;
    ranksep=1.0;

    // Define nodes
    dbssvc [label="dbssvc"];
    dbstore [label="dbstore"];
    rabbitmq [label="rabbitmq"];
    server [label="server"];
    artifactstore [label="artifactstore"];
    agent [label="agent"];

    // Define edges (reversed directions)
    dbstore -> dbssvc;
    server -> dbstore;
    server -> rabbitmq;
    server -> artifactstore;
    agent -> dbstore;
    agent -> artifactstore;
    agent -> rabbitmq;
}
